<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="favouriteItem" type="com.example.lorenaandone.first_app_v0.viewmodel.FavouriteItemViewModel"/>
    </data>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/relativeLayout">

    <ImageView
        android:id="@+id/favourite_poster"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="@dimen/card_margin"
        app:gladeUrl="@{favouriteItem.poster}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/favourite_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{favouriteItem.title}"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/favourite_poster" />

</android.support.constraint.ConstraintLayout>

</layout>